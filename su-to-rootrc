# /etc/su-to-rootrc
# helper to run X-apps with mx-pkexec
# part of mx-pkexec package

P="" ; C="" ; N=""

for i in "$@"; do
   case "$prev" in
     -p)
       P="$i";;
     -c)
       C="$i";;
     -X) 
       N="X11";;
   esac
   prev="$i"
done

[[ "$P" == "root" ||  x"$P" == "x" ]] && [[ "$N" == "X11" ]] &&  {
  [ -x /usr/bin/mx-pkexec ] && {
	   /usr/bin/mx-pkexec "$C"
	   exit
   }
}
